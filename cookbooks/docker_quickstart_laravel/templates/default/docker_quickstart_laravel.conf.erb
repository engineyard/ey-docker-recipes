server {
  listen 8081;
  server_name <%= @server_name %>;

  location / {
    proxy_pass http://<%= @docker_quickstart_laravel_hostname %>:7000;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;

    access_log /var/log/engineyard/nginx/docker_quickstart_laravel.access.log main;
    error_log /var/log/engineyard/nginx/docker_quickstart_laravel.error.log notice;
  }
}
